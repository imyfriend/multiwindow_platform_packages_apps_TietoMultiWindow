<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tieto.multiwindow">
    <item android:drawable="@drawable/hide_click"
        android:state_pressed="true"
        app:state_right="true"
        app:state_expanded="true" />
    <item android:drawable="@drawable/hide"
        android:state_pressed="false"
        app:state_right="true"
        app:state_expanded="true" />
    <item android:drawable="@drawable/show_click"
        android:state_pressed="true"
        app:state_right="true"
        app:state_expanded="false" />
    <item android:drawable="@drawable/show"
        android:state_pressed="false"
        app:state_right="true"
        app:state_expanded="false" />
    <item android:drawable="@drawable/hide_click"
        android:state_pressed="true"
        app:state_right="false"
        app:state_expanded="false" />
    <item android:drawable="@drawable/hide"
        android:state_pressed="false"
        app:state_right="false"
        app:state_expanded="false" />
    <item android:drawable="@drawable/show_click"
        android:state_pressed="true"
        app:state_right="false"
        app:state_expanded="true" />
    <item android:drawable="@drawable/show"
        android:state_pressed="false"
        app:state_right="false"
        app:state_expanded="true" />
</selector>
